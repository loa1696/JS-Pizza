    <script src="https://cdnjs.cloudflare.com/ajax/libs/less.js/2.5.3/less.min.js"></script>


</head>
<body>

<div class="container">
    <div class="row">
        <div class="col-xs-6 col-sm-8 col-md-4">
            <% include common/header.ejs %>
            <h4 style="margin-top: 150px">1. Контактні дані</h4>
            <form>
            <div class="col-xs-3 col-sm-4 col-md-4">

                    <div class="form-group">
                        <label for="name">Ім'я</label>
                        <input type="text" class="form-control" id="name" placeholder="Ім'я Прізвище">
                        <span id="helpBlock1" class="help-block errorLabel invisible">Введіть власне ім'я, без цифр</span>

                    </div>
                    <div class="form-group">
                        <label for="phoneNumber" class="l">Телефон</label>
                        <input type="text" class="form-control" id="phoneNumber" placeholder="+380987654321">
                        <span id="helpBlock2" class="help-block errorLabel invisible">Введіть номер телефону у форматі +380 або почніть з 0</span>
                    </div>
                    <div class="form-group">
                        <label for="adress">Адреса</label>
                        <input type="text" class="form-control" id="adress" placeholder="Київ, вул. Спаська, 2">
                        <span id="helpBlock3" class="help-block errorLabel invisible">Введіть адресу доставки піци</span>
                    </div>

            </div>

            <div class="col-xs-3 col-sm-4 col-md-4">
                <div class="deliveryInfo">
                    <h4>Інформація про замовлення</h4>
                    <h5><span><b>Приблизний час доставки: </b></span><span  id="when">невідомий</span></h5>
                    <h5><span><b>Адреса доставки: </b></span><span id="where">невідома</span></h5>
                </div>
                <button id="next" type="button" class="btn btn-primary pull-right" style="margin-bottom: 15px">Далі<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> </button>
            </div>
            </form>
            <div id="googleMap" style="width: 600px;height: 250px; margin-top: 100px"></div>


            <%include common/footer.ejs%>
        </div>
        <div class="col-xs-6 col-sm-4 col-md-3">
            <%include common/rightPanel.ejs%>

        </div>
    </div>
</div>

